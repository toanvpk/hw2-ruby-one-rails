<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table class="table table-striped table-hover" id="movie_table" width=100%>
  <thead class="bg-blak-100 border-b border-black-200">
    <tr style="background-color: yellow">
      <th scope="col"><%= link_to 'Title', :sort => 'title'%></th>
      <th scope="col"><%= link_to 'Rating', :sort => 'rating'%></th>
      <th scope="col"><%= link_to 'Release Date', :sort => 'release_date'%></th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr style="background-color: green" scope="row">
        <td width=15%>
          <%= movie.title %>
        </td>
        <td width=5%>
          <%= movie.rating %>
        </td>
        <td width=15%>
          <%= movie.release_date %>
        </td>
        <td>
          <%= movie.description %>          
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr scope="row"></td>
  </tfoot>
</table>

<%= link_to "New movie", new_movie_path %>
